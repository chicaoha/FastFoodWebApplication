 @model FastFoodWebApplication.Models.Dish

@{
    ViewData["Title"] = "Create";
    var defaultImg = "/images/f1.png";
}
@await Html.PartialAsync("_HeadPartial")



<style>
    input[type=file] {
        display: none
    }

    #img {
        cursor: pointer;
        width: 120px;
        height: 120px;
        border: 1px solid gray;
        min-width: 100px
    }
    .control-label{
        margin-top: 10px;
    }
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var loadFile = function (event) {
            var img = document.getElementById('img');
            img.src = URL.createObjectURL(event.target.files[0]);
            img.onload = function () {
                URL.revokeObjectURL(img.src)
            }
        };

        $("#img").click(function () {
            $("input[type=file]").click();
        })
    </script>
}


<div class="container-fluid px-1 py-5 mx-auto" style="margin-top:-80px">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <div class="card">
                <h5 class="text-center mb-4">ADD NEW DISH</h5>
                <form class="form-card"  asp-action="Create" enctype="multipart/form-data" method="post">
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">First name<span class="text-danger"> *</span></label> <input type="text" id="fname" asp-for="Name" placeholder="Enter your name" onblur="validate(1)"> </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Price<span class="text-danger"> *</span></label> <input type="text" id="lname" asp-for="DishPrice" placeholder="Enter price" onblur="validate(2)"> </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Dish type<span class="text-danger"> *</span></label>   <select style=" padding:9px 15px;margin: 5px 0px;" asp-for="DishTypeId" id="lname" class="form-control" asp-items="ViewBag.DishTypeId"></select> </div>
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Dish Status<span class="text-danger"> *</span></label> <input type="text" id="mob" asp-for="DishStatus" placeholder="" onblur="validate(4)" value="1" readonly> </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Description<span class="text-danger"> *</span></label> <textarea rows="4" type="text" id="job" asp-for="Description" placeholder="" onblur="validate(5)"></textarea></div>
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="DishImage" class="form-control-label px-3"></label>
                            <input asp-for="DishImage" type="file" accept="image/*" onchange="loadFile(event)" class="form-control" name="image" />
                            <img id="img" src="@(Model?.DishImage??defaultImg)" />
                        </div>
                    </div>
                   
                    
                    <div class="row justify-content-end">
                        <div class="form-group col-sm-3 ">
                        </div>
                        <div class="form-group col-sm-3" style="margin-left:auto">
                            <input type="submit" value="ADD NEW DISH" class="btn btn-primary"  />
                        </div>
                        @* <div class="form-group col-sm-3 ">
                        </div> *@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

