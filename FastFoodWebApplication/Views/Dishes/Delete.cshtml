@model FastFoodWebApplication.Models.Dish

@{
    ViewData["Title"] = "Delete";
    var image = "/images/f1.png";
    if (Model.DishImage != null)
    {
        string img = Model.DishImage.Replace("\\", "/");
        image = "/" + img;
    }
}
@await Html.PartialAsync("_HeadPartial")

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Dish</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DishStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DishStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DishType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DishType.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DishPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DishPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DishImage)
        </dt>
        <dd class = "col-sm-10">
            <img id="img" src="@image">
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DishId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
<style>
    input[type=file] {
        display: none
    }

    #img {
        cursor: pointer;
        width: 100px;
        height: 100px;
        border: 1px solid gray;
        min-width: 100px
    }
</style>