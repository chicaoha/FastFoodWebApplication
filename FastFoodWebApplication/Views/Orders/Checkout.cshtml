@section Scripts{
    <script>
        <script>
        $(document).ready(function () {
            function updateTotalPrice() {
                // Get the selected voucher code and amount from the dropdown
                var selectedVoucherCode = $("select[name='voucherCode']").val();
                var selectedVoucherAmount = parseFloat(selectedVoucherCode.split('-')[1]);

                // Assuming the initial total price is stored in a variable
                var initialTotalPrice = @ViewBag.subTotal; // Replace this with your actual initial total price

                // Calculate the discounted price
                var discountedPrice = initialTotalPrice - (initialTotalPrice * selectedVoucherAmount / 100);

                // Update the total price on the page
                $(".total span:last-of-type").text("$" + discountedPrice.toFixed(2));
            }

            // Attach an event listener to the voucher dropdown
            $("select[name='voucherCode']").change(function () {
                // Call the updateTotalPrice function when the dropdown value changes
                updateTotalPrice();
            });

            // Call the updateTotalPrice function initially to set the initial total price
            updateTotalPrice();
        });
    </script>

