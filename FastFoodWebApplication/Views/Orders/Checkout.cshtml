<div class='container checkout'>
    <div class='window'>
        <div class='order-info'>
            <div class='order-info-content'>
                <h2>Order Summary</h2>
                @foreach(var item in Model)
                {
                    var image = "/images/f1.png";
                    if (item.Dish.DishImage != null)
                    {
                        string img = item.Dish.DishImage.Replace("\\", "/");
                        image = "/" + img;
                    }
                    <div class='line'></div>
                    <table class='order-table'>
                        <tbody>
                            <tr>
                                <td>
                                    <img src='@image' class='full-width'></img>
                                </td>
                                <td>
                                    <br> <span class='thin'>@item.Dish.Name</span>
                                   <br> <span class='thin small'>Size: @item.size<br><br></span>
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <div class='price'>@item.Price</div>
                                </td>
                            </tr>
                        </tbody>

                    </table>
                }
                <div class='line' style="margin-top:5px">

                </div>
                <div class='total' id="total">
                    <span style='float:left;'>
                        <div class='thin dense'>Sub total </div>
                        <div class='thin dense'>Voucher </div>
                        <div class='thin dense'>Delivery</div>
                        TOTAL
                    </span>
                    <span style='float:right; text-align:right;'>
                        <div class='thin dense'>@ViewBag.subTotal</div>
                        <div class='thin dense'>$68.75</div>
                        <div class='thin dense'>30.000</div>
                        @ViewBag.subTotal
                    </span>
                </div>
            </div>
        </div>
        <div class='credit-info'>
            <div class='credit-info-content'>
                <form method="post" asp-action="PlaceOrder" asp-controller="Orders">
                <table class='half-input-table'>

                Name
                <input class='input-field' name="name"></input>
                Address
                <input class='input-field' name="address"></input>
                <table class='half-input-table'>
                    <tr>
                        Phone number
                        <input class='input-field' name="phone"></input>
                    </tr>
                </table>
                Vouchers
                        <select class="input-field" name="voucherCode" id="voucherCode">
                         <option value="None" class="font" >None</option>
                        @foreach(var i in vouchers)
                        {
                                <option class="font" value="@i.Voucher.Code">@i.Voucher.Code - @i.Voucher.Amount%</option>
                        }
                    </select>
               <input type="hidden" name="discount" value=""></input>
                <button class='pay-btn'>Checkout</button>
                </form>
            </div>

        </div>

    </div>
</div>

